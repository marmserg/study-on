{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / Курсы / Study-on{% endblock %}

{% block body %}

    <h1>{{ course.name }}</h1>

    <p>{{ course.description }}</p>

    <h3>Уроки</h3>

    <ol>
        {% for lesson in course.lessons %}
            <li>
                <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
            </li>
        {% else %}
            <p>Пока нет ни одного урока. Надо бы добавить ;)</p>
        {% endfor %}
    </ol>
    <a class="btn" href="{{ path('app_lesson_new', {'course_id': course.id }) }}">Добавить урок</a>

    <hr>

    <a class="btn" href="{{ path('app_course_index') }}">Назад к списку курсов</a>
    <a class="btn" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
    {{ include('course/_delete_form.html.twig') }}

{% endblock %}