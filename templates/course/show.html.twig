{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / Курсы / Study-on{% endblock %}

{% block body %}

    <div class="wrapper m-3">
        <h1 class="mb-2">{{ course.name }}</h1>

        <div class="description mb-2">
            {{ course.description }}
        </div>

        <h3 class="mb-2">Уроки</h3>

        <ol>
            {% for lesson in course.lessons %}
                <li>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
                </li>
            {% else %}
                <p>Пока нет ни одного урока. Надо бы добавить ;)</p>
            {% endfor %}
        </ol>
        <a class="btn btn-outline-primary" href="{{ path('app_lesson_new', {'course_id': course.id }) }}">Добавить урок</a>

    </div>

    <hr>

    <div class="buttons px-3 mb-3">
        <a class="btn btn-primary me-2" href="{{ path('app_course_index') }}">Назад к списку курсов</a>
        <a class="btn btn-primary me-2" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
        {{ include('course/_delete_form.html.twig') }}
    </div>


{% endblock %}